		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>

		<!--0x10 (Pointer)-->
		<hex>0000</hex>
		<hex>0FFF</hex>
		<hex>0BBB</hex>
		<hex>0777</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
		<hex>0000</hex>
	</label>

