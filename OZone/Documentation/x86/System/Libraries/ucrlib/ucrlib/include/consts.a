		ifndef	$Consts_a
$Consts_a	=	0
		echo	consts.a

		include	macros.a


; Common constants and equates:

NULL		=	0
bell		=	07h
bs		=	08h
tab		=	09h
lf		=	0ah
cr		=	0dh
nl		textequ	<cr,lf>



; Some very useful textequs

byp		textequ	<byte ptr>
wp		textequ	<word ptr>
dp		textequ	<dword ptr>



; Some moderately useful macros:



DOS		macro	opcode
		ifnb	opcode
		mov	ah, opcode
		endif
		int	21h
		endm

ExitPgm		macro
		mov	ah, 4ch
		int	21h
		endm


lesi		macro	adrs
		mov     di, seg adrs
		mov	es, di
		mov	di, offset adrs
		endm

lfsi		macro	adrs
		mov	si, seg adrs
		mov	fs, si
		mov	si, offset adrs
		endm

lgsi		macro
		mov	bx, seg adrs
		mov	gs, bx
		mov	bx, offset adrs
		endm

xfsgs		macro
		push	fs
		push	gs
		pop	fs
		pop	gs
		xchg	si, di
		endm

fses		macro
		mov	si, es
		mov	fs, si
		mov	si, di
		endm

esfs		macro
		mov	di, fs
		mov	es, di
		mov	di, si
		endm

pshadrs		macro	object
		push	seg object
		push	offset object
		endm



		endif	;ifndef 
